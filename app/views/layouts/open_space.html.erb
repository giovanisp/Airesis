<% content_for :menu do %>
    <div class="topimage hide-for-small">
      <%= image_tag 'single_small.png', width: 40, alt: ENV['APP_LONG_NAME'] %>
    </div>
    <div class="topmenu <%= 'noleft' unless content_for? :left_panel %>">
      <span class="tit"><%= link_to "#{APP_SHORT_NAME} - #{t('open_space')}", root_path %></span>

      <div class="submenu">
        <%= link_to(proposals_path, class: ((['proposals', 'proposal_revisions'].include? controller_name) ? 'sel' : '')) do %>
            <span class="show-for-large-up"><%= t('pages.open_space.layout.proposals_button') %></span>

            <div class="fa fa-lightbulb-o small hide-for-large-up" title="<%= t('pages.open_space.layout.proposals_button') %>"></div>
        <% end %>
        <span> ⋅ </span>
        <%= link_to(blogs_path, class: ((['blogs','blog_posts'].include? controller_name) ? 'sel' : '')) do %>
            <span class="show-for-large-up"><%= t('pages.open_space.layout.blogs_button') %></span>

            <div class="fa fa-comment small hide-for-large-up" title="<%= t('pages.open_space.layout.blogs_button') %>"></div>
        <% end %>
        <span> ⋅ </span>
        <%= link_to(groups_path, class: ((['groups'].include? controller_name) ? 'sel' : '')) do %>
            <span class="show-for-large-up"><%= t('pages.open_space.layout.groups_button') %></span>

            <div class="fa fa-users small hide-for-large-up" title="<%= t('pages.open_space.layout.groups_button') %>"></div>
        <% end %>
        <span> ⋅ </span>
        <%= link_to events_path, class: (controller_name == 'events' ? 'sel' : '') do %>
            <span class="show-for-large-up"><%= t('pages.open_space.layout.calendar_button') %></span>

            <div class="fa fa-calendar small hide-for-large-up" title="<%= t('pages.open_space.layout.calendar_button') %>"></div>
        <% end %>
        <span> ⋅ </span>
        <%= link_to(tags_path, class: (controller_name == 'tags' ? 'sel' : '')) do %>
            <span class="show-for-large-up"><%= t('pages.open_space.layout.tags_button') %></span>

            <div class="fa fa-tags small hide-for-large-up" title="<%= t('pages.open_space.layout.tags_button') %>"></div>
        <% end %>
      </div>
    </div>
<% end %>
<%= render 'layouts/general' %>
