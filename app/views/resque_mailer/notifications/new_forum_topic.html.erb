<% @topic = Frm::Topic.find(@data[:topic_id]) %>
<% @user = @topic.user %>
<% @alert_url = check_alert_url(@alert, host: @alert.user.locale.host, l: @alert.user.locale.lang) %>

<%= email_h1 do %>
    <%= @alert.email_subject %>
<% end %>

<%= section_panel do %>
    <%= avatar(@user, size: 40, url: true) %>
    <h5 style="color: #222222; font-family: 'Helvetica', 'Arial', sans-serif; font-weight: normal; text-align: left; line-height: 1.3; word-break: normal; font-size: 24px; margin: 0; padding: 0 0 10px;" align="left">
      <%= @topic.subject %></h5>
    <%= raw @topic.posts.first.text %>
<% end %>

<%= blue_panel do %>
    <a href="<%= @alert_url %>" style="color: #2ba6cb; text-decoration: none;">
      <%= t('mailer.default.click_here') %></a> <%= t('mailer.new_forum_topic.view', app_short_name: APP_SHORT_NAME) %>
<% end %>
