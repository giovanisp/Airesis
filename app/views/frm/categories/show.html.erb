  <li class="current"><%= link_to @category, group_frm_category_url(@group, @category) %></li>
</ul>

<div class='category'>
  <%= render @category %>
</div>

<%= content_for :left_panel do %>
    <%= render partial: 'groups/administration_panel' %>
<% end %>

<%= render partial: '/frm/application/forem_footer' %>
