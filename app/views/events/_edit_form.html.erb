<% if @group %>
    <h2><%= "Evento del gruppo: #{@group.name}" %></h2>
<% else %>
    admin event
<% end %>
<%= simple_form_for (@group && !in_subdomain?) ? [@group, @event] : @event, validate: true do |f| %>
    <%= f.hidden_field :organizer_id %>
    <div class="row">

      <div class="columns medium-6">
        <%= f.input :title %>
        <%= f.input :description, rows: 4, cols: 30 %>

        <% if @event.is_votazione? %>
            <%= f.hidden_field :private %>
        <% else %>
            <%= f.label :private do %>
                <%= f.check_box :private, title: t('pages.events.new.private_tooltip') %>
                <%= t('activerecord.attributes.event.private') %>
            <% end %>
        <% end %>
        <div class="row collapse">
            <%=f.label :starttime %>
          <div class="small-9 columns">
            <%= f.text_field :starttime, as: :string, input_html: {value: (l @event.starttime, format: :textfield)} %>
          </div>
          <div class="small-3 columns">
            <span class="postfix">
              <i class="fa fa-calendar"></i>
            </span>
          </div>
        </div>

        <%= f.input :endtime, as: :string, input_html: {value: (l @event.endtime, format: :textfield)} %>

        <%= f.label :all_day do %>
            <%= f.check_box :all_day %>
            <%= t('activerecord.attributes.event.all_day') %>
        <% end %>

        <%= f.hidden_field :commit_button, value: "" %>
      </div>

      <div class="columns medium-6">
        <% if @event.is_incontro? %>
        <%= f.simple_fields_for :meeting, @meeting do |m| %>
            <%= m.simple_fields_for :place, @place do |p| %>
                <div id="edit_luogo">
                  <%= p.input :comune_id, input_html: {style: 'width:100%', "data-pre" => [{id: @event.place.comune.id, name: @event.place.comune.description}].to_json} %>
                  <%= p.input :address %>
                  <%= p.hidden_field :latitude_original %>
                  <%= p.hidden_field :longitude_original %>
                  <%= p.hidden_field :latitude_center %>
                  <%= p.hidden_field :longitude_center %>
                  <%= p.hidden_field :zoom %>

                  <div id="edit_map_canvas" style="width: 320px; height: 320px;"></div>
                  <!--<div id="panorama_canvas" style="width: 320px; height: 120px;"></div>-->
                </div>
            <% end %>
        <% end %>
        <% end %>

      </div>
    </div>

    <div class="row">
      <div class="columns large-12 small-12">
        <a href="#" class="btn" onclick="$('#event_edit').foundation('reveal','close');$('#event_edit').remove();"><%= t('buttons.cancel') %></a>
        <% if @event.event_series -%>
            <%= f.submit 'Aggiorna solo questa occorrenza', onclick: "document.getElementById('event_commit_button').value = this.value" %>
            <%= f.submit 'Aggiorna tutte le occorrenze', onclick: "document.getElementById('event_commit_button').value = this.value" %>
            <%= f.submit 'Aggiorna tutte le occorrenze successive', onclick: "document.getElementById('event_commit_button').value = this.value" %>
        <% else -%>
            <%= f.submit 'Aggiorna', onclick: "document.getElementById('event_commit_button').value = this.value", class: 'btn blue', data: {disable_with: t('updating')} %>
        <% end -%>
      </div>
    </div>
<% end %>
<a class="close-reveal-modal">&#215;</a>

<script type="text/javascript">
    $(function() {
        start_end_fdatetimepicker($('#event_starttime'), $("#event_endtime"));

        $('#event_meeting_attributes_place_attributes_address').keyup(function() {
            codeAddress('luogo');
        });

        $("#event_meeting_attributes_place_attributes_comune_id").select2({
            cacheDataSource: [],
            placeholder: "Digita alcuni caratteri per cercare un comune",
            query: function(query) {
                self = this;
                var key = query.term;
                var cachedData = self.cacheDataSource[key];

                if(cachedData) {
                    query.callback({results: cachedData});
                    return;
                } else {
                    $.ajax({
                        url: '/comunes',
                        data: { q : query.term },
                        dataType: 'json',
                        type: 'GET',
                        success: function(data) {
                            self.cacheDataSource[key] = data;
                            query.callback({results: data});
                        }
                    })
                }
            },
            escapeMarkup: function (m) { return m; }
        });

        /*$('#event_meeting_attributes_place_attributes_comune_id').on('change',function() {
            codeAddress('luogo');
        });*/

    });
</script>
