<% if @proposal.users.include? current_user %>
    <% if @proposal.available_authors.any? %>
        <%= link_to available_authors_list_proposal_path(@proposal, group_id: params[:group_id]), remote: true, data: {disable_with: t('loading')}, class: 'btn' do %>
            <i class="fa fa-user"></i>
            <%= t('pages.proposals.show.available_editors_button', count: @proposal.available_authors.count) %>
        <% end %>
    <% end %>
<% end %>
