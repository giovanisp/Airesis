<% if user_signed_in? %>
    <div class="mybox">
      <h4><%= t('pages.groups.index.groups_list') %></h4>

      <div class="mycont">
        <% @groups = current_user.groups %>
        <% if @groups.empty? %>
            <%= raw t('pages.groups.index.no_groups_yet', {name: (link_to t('group'), groups_path)}) %>
        <% end %>
        <% @groups.each do |group| %>
            <div class="panel">
              <div class="groupcontainer">
                <div class="groupImg24">
                  <%= group.group_image_tag(24) rescue nil %>
                </div>
                <div class="group">
                  <%= link_to group.name, group_url(group) %>
                </div>
              </div>
              <div class="clearboth"></div>
            </div>
        <% end unless @groups.empty? %>
      </div>
    </div>
<% end %>
