<% @page_title = t('.title') %>

<div class="card">
  <h2><%=@page_title%></h2>
  <p>
    <%= t('.instructions_html')  %>
  </p>
</div>
<div class="card">
<div class="row">
  <div class="columns medium-3">
    <%= @orig.user_image_tag(200) %>
  </div>
  <div class="columns medium-9">
    <%= form_for(:user, url: {action: "join_accounts", controller: "users"}) do |f| %>

        <%= f.label :email, 'Email' %>
        <%= f.text_field :email, {disabled: true} %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= link_to t('buttons.cancel'), root_path, class: 'btn' %>
        <%= f.button class: 'btn blue' do %>
            <i class="fa fa-check"></i>
            <%= "Join accounts and login" %>
        <% end %>
    <% end %>
  </div>
</div>
</div>
