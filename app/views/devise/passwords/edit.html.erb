<%@page_title = t('pages.passwords.edit.title')%>
<h2><%= @page_tile %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render partial: 'fragments/error_messages', locals: {resource: resource} %>
  
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, t('pages.password.edit.new_password') %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, t('pages.password.edit.confirm_password') %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit t('pages.password.edit.confirm_button'), :class=> 'btn blue' %></div>
<% end %>

<%= render partial: "devise/shared/links" %>